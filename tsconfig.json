  {
    "compilerOptions": {
      "target": "es2018",
      "module": "esnext",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "lib": [
        "es2017",
        "dom",
        "es6",
        "es5"
      ],
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "outDir": "out-tsc",
      "sourceMap": true,
      "inlineSources": true,
      "rootDir": "./",
      "plugins": [
        {
          "name": "ts-lit-plugin"
        }
      ]
    },
    "include": [
      "**/*.ts"
    ]
  }